SDL_DIR=${HOME}/Documents/cours/l2-projets/tuto_SDL/SDL2-2.0.7/bin
SDL_LIB_DIR=${SDL_DIR}/lib
SDL_INC_DIR=${SDL_DIR}/include
LIBS=-L${SDL_LIB_DIR} -lSDL2
INCS=-I${SDL_INC_DIR}
PROG=sdl_test
all: sdl_text
sdl_text: sdl_test.c
${CC} -o ${PROG} sdl_test.c ${LIBS} ${INCS}
clean:
rm -f ${PROG}
rm -f *.o
